<div id = "admin_show_add">
<%= flash[:notice]%>
<div id = "show_box">
    <div style= "text-align: center"><h1><u>Add Shows</u></h1></div>
<div id = "add_shows">
    <%= form_tag admin_movie_shows_path do %>
        <div>
            <div><b>Select Theatre  :</b> <b style ="position: relative; left: 18px;">Select Audi :</b></div><% theatre = @theatres.map { |t| [t.location, t.id] }%><%= select_tag "theatre", options_for_select(theatre), :onchange => "get_audis(this)", :id => "theatre", :prompt => "select" %>
            <%= select_tag "audi", options_for_select(["select"]), :class => "audi", :id => "audis" %>
        </div>

        <div>
            <div><b>Enter Movie    :</b></div><%= text_field_tag "movie" %>
        </div>
        <div>
            <div><b>Enter ShowTime :</b></div><%= select_tag "showtime[]", options_for_select(["select", "09:00", "13:00", "18:00", "21:00"]), :onclick => "hide_default(this)"%>
        </div>
        <div class ="add_show"><a href = "#" onclick = "show_timing(this)">Add another</a></div>
        <div class ="add_show"><a href = "#" onclick = "show_timing(this)">Add another</a></div>
        <div class ="add_show"><a href = "#" onclick = "show_timing(this)">Add another</a></div>
        <div>
            <div><b>From     :</b></div><%= text_field_tag "date_from", '', :class => "show_calender" %>
            <b>To     :</b><%= text_field_tag "date_to", '', :class => "show_calender" %>
        </div>
        <div>
            <%= submit_tag "Add Show/s" %>
        </div>
    <% end %>
</div>
</div>
</div>